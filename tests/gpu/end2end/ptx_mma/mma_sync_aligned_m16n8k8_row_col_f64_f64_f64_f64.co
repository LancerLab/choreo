// REQUIRES: TARGET-GPU
// RUN: choreo -gs -t cute %s -o %s.cute.result && bash %s.cute.result --execute | FileCheck --match-full-lines %s && rm -f %s.cute.result

#define M 128
#define N 256
#define K 128

__co__ auto matmul(double [M, K] lhs, double [K, N] rhs) {
  double [M, N] output;

  int MMA_M = 16, MMA_N = 8, MMA_K = 8;
  parallel {m, n} by [M / MMA_M / 2, N / MMA_N / 2 ] : block {
    mc = mma.fill 0.0;
    parallel {g0, g1} by [2, 2]: group {
      foreach k in K / MMA_K {
        ma = mma.load lhs.chunkat(m#g0, k);
        mb = mma.load rhs.chunkat(k, n#g1);
        mma.row.col mc, ma, mb;
      }
      mma.store mc, output.chunkat(m#g0, n#g1);
    };
  }
    

  return output;
}

int main() {
  auto lhs = choreo::make_spandata<choreo::f64>(M, K);
  auto rhs = choreo::make_spandata<choreo::f64>(K, N);

  lhs.fill_random(0.0, 0.5);
  rhs.fill_random(0.0, 0.9);

  auto res = matmul(lhs.view(), rhs.view());

  double tolerance = 0.002;
  // verfication
  for (size_t i = 0; i < res.shape()[0]; ++i)
    for (size_t j = 0; j < res.shape()[1]; ++j) {
      double ref = 0.0;
      for (size_t k = 0; k < lhs.shape()[1]; ++k)
        ref += (lhs[i][k] * rhs[k][j]);
      auto delta = std::abs((ref - (res[i][j])) / ref);
      if (delta >= tolerance) {
        std::cout << "[" << i << ", " << j << "] " << ref << " <-> " << (res[i][j]) << ", delta: " << delta * 100 << "%\n";
      }
      choreo::choreo_assert((delta < tolerance), "values are not equal.");
    }

  std::cout << "Test Passed\n" << std::endl;
}

// CHECK: Test Passed
