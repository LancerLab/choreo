# Pick only the components for the compiler package
set(CPACK_COMPONENTS_ALL rt_headers;executables)
# Put all selected components into one .deb (instead of split-debs)
set(CPACK_DEB_COMPONENTS_GROUPING "ALL_COMPONENTS_IN_ONE")

# Per-package metadata overrides
set(CPACK_PACKAGE_FILE_NAME "choreo-@CPACK_PACKAGE_VERSION@-@CMAKE_SYSTEM_NAME@")
set(CPACK_DEBIAN_PACKAGE_SECTION "devel")
set(CPACK_PACKAGE_DESCRIPTION "Standalone Choreo compiler with runtime headers")
set(CPACK_DEBIAN_PACKAGE_DEPENDS "libc6 (>= 2.27), libgmp10 (>= 6.1.2)")
